<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
    <h6 class="card-subtitle mb-2 text-muted">
      <time>
        <small class="text-secondary">
          <%= post.created_at.to_date.strftime("%d %B, %Y") %>  
        </small>
      </time>
    </h6>
    <p class="card-text">
      <%= post.summary %>
    </p>
  </div>
</div>
<br>