<h3><%= @post.title %></h3>

<time>
  <small class="text-secondary">
    <%= @post.created_at.to_date.strftime("%d %B, %Y") %>  
  </small>
</time>
<br><br>
<p><%= @post.body %></p>
<br><br>
<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary btn-sm" %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' },  class: "btn btn-outline-danger btn-sm" %>